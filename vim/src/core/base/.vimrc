set tabstop=2
set shiftwidth=2
set noexpandtab

" Indentation
set autoindent

" Search
set hlsearch
set ignorecase
set smartcase

" Text Rendering
set linebreak
set laststatus=2
set mouse=a
set title

" Search down into subfolders
" Provides tab-completion for all file-related tasks
set path+=**

" Display all matching files when we tab complete
set wildmenu

